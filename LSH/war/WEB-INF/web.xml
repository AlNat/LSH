    </servlet>

    <servlet-mapping>
        <servlet-name>missingPageServlet</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    -->

    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
</web-app>